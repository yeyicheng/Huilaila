	<select id="findByPage" parameterClass="page" resultClass="Freight">
		<![CDATA[
			SELECT * FROM t_freight 
		]]>
		<dynamic prepend="WHERE">
			<include refid="findUserByPageCondition" />
		</dynamic>
		<![CDATA[
			ORDER BY freightid
		]]>
	</select>

	<select id="findByCount" parameterClass="page" resultClass="int">
		<![CDATA[
			SELECT COUNT(*) FROM t_freight  
		]]>
		<dynamic prepend="WHERE">
			<include refid="findUserByPageCondition" />
		</dynamic>
	</select>
