<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">

	<bean name="userAction" class="com.huilaila.action.UserAction" scope="prototype">
		<property name="userService" ref="userService" />
	</bean>
	
	<bean name="tagAction" class="com.huilaila.action.TagAction" scope="prototype">
		<property name="tagService" ref="tagService" />
	</bean>
	
	<bean name="userTagAction" class="com.huilaila.action.UserTagAction" scope="prototype">
		<property name="userTagService" ref="userTagService" />
	</bean>
	
	<bean name="jobAction" class="com.huilaila.action.JobAction" scope="prototype">
		<property name="jobService" ref="jobService" />
	</bean>
	
	<bean name="companyAction" class="com.huilaila.action.CompanyAction" scope="prototype">
		<property name="companyService" ref="companyService" />
	</bean>
	
	<bean name="resumeAction" class="com.huilaila.action.ResumeAction" scope="prototype">
		<property name="resumeService" ref="resumeService" />
	</bean>

	<bean name="jobApplicationAction" class="com.huilaila.action.JobApplicationAction" scope="prototype">
		<property name="jobApplicationService" ref="jobApplicationService" />
	</bean>
	
	<bean name="jobFavoriteAction" class="com.huilaila.action.JobFavoriteAction" scope="prototype">
		<property name="jobFavoriteService" ref="jobFavoriteService" />
	</bean>
</beans>
