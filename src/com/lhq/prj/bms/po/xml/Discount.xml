			<isNotEmpty property="di">
				<![CDATA[
					upper(channel) LIKE '%' + upper(#conditions[0]:VARCHAR#) + '%'    
		    	]]>
			</isNotEmpty>		
		</dynamic>
	</select> -->
	
	<select id="findByExample" parameterClass="discount" resultClass="discount">
		<![CDATA[
			SELECT * FROM t_discount WHERE userId = #userId:NUMBER# and channel = #channel:VARCHAR#
		]]>
	</select>
	
	<select id="findPageByExample" parameterClass="discount" resultClass="discount">
		<![CDATA[
			SELECT * FROM t_discount WHERE userId = #userId:NUMBER#
		]]>
	</select>
</sqlMap>
